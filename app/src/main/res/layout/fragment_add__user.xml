<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_height="600dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        tools:context=".fragments.Add_UserFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/appbaradd"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.Design"
            android:background="#fff" >

            <TextView
                android:id="@+id/crateuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:text="CREATE NEW USER"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </com.google.android.material.appbar.AppBarLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollview">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="195dp"
                    android:text="FIRST NAME"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ask1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-193dp"
                    android:layout_marginTop="80dp"
                    android:layout_toEndOf="@+id/firstname"
                    android:text="*"
                    android:textColor="@color/red" />


                <EditText
                    android:id="@+id/fname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/firstname"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/middlename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fname"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="195dp"
                    android:text="MIDDLE NAME"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <EditText
                    android:id="@+id/mname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/middlename"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mname"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="-25dp"
                    android:text="LAST NAME"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/lasname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/lname"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/ask2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mname"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="-25dp"
                    android:layout_toEndOf="@+id/lname"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/suffixname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lasname"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="-25dp"
                    android:text="SUFFIX"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/sufname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/suffixname"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/sexrdbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="SEX"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_below="@+id/sufname"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="-25dp"/>


                <RadioGroup
                    android:id="@+id/rdgrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexrdbtn"
                    android:layout_marginTop="5dp">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:checked="false"
                        android:text="MALE"
                        android:textColor="#000"
                        android:textSize="20sp" />


                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:text="FEMALE"
                        android:textColor="#000"
                        android:textSize="20sp" />

                </RadioGroup>
                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rdgrp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="10dp"
                    android:text="USER NAME"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ask3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rdgrp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="-10dp"
                    android:layout_toEndOf="@+id/uname"
                    android:text="*"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/usname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/uname"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usname"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="-21dp"
                    android:text="email"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/emailedttxt"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/email"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:id="@+id/pword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailedttxt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="-10dp"
                    android:text="password"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ask5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailedttxt"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="-10dp"
                    android:layout_toEndOf="@+id/pword"
                    android:text="*"
                    android:textColor="@color/red" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/pword"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp" />

                <ImageView
                    android:id="@+id/show"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/pword"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-110dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="63dp"
                    android:layout_toEndOf="@+id/password"
                    />


                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="-10dp"
                    android:text="mobile no."
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ask6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="-10dp"
                    android:layout_toEndOf="@+id/number"
                    android:text="*"
                    android:textColor="@color/red" />


                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/number"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/edittetxt"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"/>


                <Button
                    android:id="@+id/submitbtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/mobile"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@+id/closebtn"
                    android:backgroundTint="#003473"
                    android:text="SUBMIT"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/closebtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/mobile"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#fff"
                    android:text="CLOSE"
                    android:textColor="@color/black" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>